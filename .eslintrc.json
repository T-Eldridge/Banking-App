{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2020": true,
    "node": true
  },
  "extends": ["airbnb", "prettier", "plugin:node/recommended"],

  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "error",
    "no-console": "warn",
    "func-names": "off",
    "object-shorthand": "warn",
    "class-methods-use-this": "warn",
    "max-classes-per-file": 0,
    "endOfLine": "auto"
  },

  "plugins": ["prettier", "react"]
}
